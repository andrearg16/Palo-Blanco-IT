<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="product_template_form_view_currency_inherit" model="ir.ui.view">
		<field name="name">product.template.form.view.currency.inherit</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_form_view"/>
		<field name="arch" type="xml">
            <xpath expr="//field[@name='taxes_id']" position="before">
                <field name="expense_type_xt" required="1"/>
            </xpath>
			<xpath expr="//field[@name='list_price']" position="attributes">
                <attribute name="options">{'currency_field': 'cost_currency_id', 'field_digits': True}</attribute>
            </xpath>
		</field>
	</record>

    <record id="product_template_tree_view_currency_inherit" model="ir.ui.view">
		<field name="name">product.template.tree.view.currency.inherit</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_tree_view"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='list_price']" position="attributes">
                <attribute name="options">{'currency_field': 'cost_currency_id'}</attribute>
            </xpath>
		</field>
	</record>

    <record id="product_template_kanban_view_currency_inherit" model="ir.ui.view">
		<field name="name">product.template.kanban.view.currency.inherit</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_kanban_view"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='list_price']" position="before">
                <field name="cost_currency_id" invisible="1"/>
            </xpath>
			<xpath expr="//field[@name='list_price']" position="attributes">
                <attribute name="options">{'currency_field': 'cost_currency_id', 'field_digits': True}</attribute>
            </xpath>
		</field>
	</record>

</odoo>
