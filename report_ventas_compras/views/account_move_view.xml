<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
	
		<record id="account_invoice_report_form" model="ir.ui.view">
			<field name="name">account.move.form.inherit1</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_move_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='ref']" position="replace">
					<field name="ref" invisible="1"/>
				</xpath>
				<xpath expr="//field[@name='partner_id']" position="after">
					<field name="tipo_documento" attrs="{'invisible': [('move_type', 'not in', ('in_invoice', 'in_refund', 'in_receipt'))], 'required': [('move_type', 'in', ('in_invoice', 'in_refund', 'in_receipt'))]}"/>
					<label for="serie_factura" string="Factura del Proveedor" attrs="{'invisible': [('move_type', 'not in', ('in_invoice', 'in_refund', 'in_receipt'))], 'required': [('move_type', 'in', ('in_invoice', 'in_refund', 'in_receipt'))]}" invisible="1"/>
					<div>
						<field name="serie_factura" class="serie_alineado" placeholder="Serie" attrs="{'invisible': [('move_type', 'not in', ('in_invoice', 'in_refund', 'in_receipt'))], 'required': [('tipo_documento', '!=', 'FE'), ('move_type', 'in', ['in_invoice'])]}"/>
						<field name="num_factura" class="numero_alineado" placeholder="NÃºmero" attrs="{'invisible': [('move_type', 'not in', ('in_invoice', 'in_refund', 'in_receipt'))], 'required': [('tipo_documento', '!=', 'FE'), ('move_type', 'in', ['in_invoice'])]}"/>
					</div>
				</xpath>
				<xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='analytic_account_id']" position="after">
					<field name="expense_type_xt" force_save="1" optional="show"/>
				</xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_subtotal']" position="before">
                    <field name="iva_currency_final" force_save="1" optional="hide"/>
                    <field name="idp_currency_final" force_save="1" optional="hide"/>
                    <field name="amount_currency_final" force_save="1" optional="hide"/>
				</xpath>
				<xpath expr="//field[@name='line_ids']/tree/field[@name='analytic_account_id']" position="after">
					<field name="expense_type_xt" force_save="1"/>
				</xpath>
			</field>
		</record>

	</data>
</odoo>