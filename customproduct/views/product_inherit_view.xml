        <!--Vista Reposición-->
        <record id="stock_warehouse_orderpoint_tree_view_inherit" model="ir.ui.view">
            <field name="name">stock.warehouse.orderpoint.tree.view.inherit</field>
            <field name="model">stock.warehouse.orderpoint</field>
            <field name="inherit_id" ref="stock.view_warehouse_orderpoint_tree_editable"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='qty_on_hand']" position="after">
                    <field name="delivery_pending" string="Pendiente"/>
                    <field name="monthly_sale" string="Venta Mensual"/>
                    <field name="existence_trans" string="Existencia Transf."/>
                    <field name="days_inv" string="Días inv."/>
                    <field name="transit" string="Transito"/>
                </xpath>
            </field>
        </record>

        <!--Vista bÚsqueda de productos en PO-->
        <record id="product_stock_tree_inherit_view" model="ir.ui.view">
            <field name="name">product.stock.tree.inherit.view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="stock.view_stock_product_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='virtual_available']" position="after">
                    <field name="delivery_pending" string="Pendiente"/>
                    <field name="reordering_min_qty" string="Mínimo"/>
                    <field name="reordering_max_qty" string="Máximo"/>
                    <field name="monthly_sale" string="Venta Mensual"/>
                    <field name="existence_trans" string="Existencia Transf."/>
                    <field name="days_inv" string="Días inv."/>
                    <field name="transit" string="Transito"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>