<odoo>
    <data>
        <!--Vista Form product_template-->
        <record id="product_inherit_view" model="ir.ui.view">
            <field name="name">product.inherit.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[5]" position="after">
                    <page name="Datos adicionales" string="Datos adicionales">
                        <group col="2">
                            <group col="2">
                            <field name="delivery_pending"/>
                            <field name="monthly_sale"/>
                        </group>
                        <group>
                            <field name="existence_trans"/>
                            <field name="days_inv"/>
                            <field name="transit"/>
                        </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="stock_warehouse_extends" model="ir.ui.view">
            <field name="name">stock.warehouse.extends</field>
            <field name="model">stock.warehouse.orderpoint.tree.editable</field>
            <field name="inherit_id" ref="stock.warehouse.orderpoint.tree.editable.inherit.mrp"/>
            <field name="arch" type="xml">
                <data>
                <xpath expr="//button[@name='action_stock_replenishment_info']" position="before">
                    <field name="show_supplier" invisible="1"/>
                    <field name="supplier_id" string="Vendor" optional="show" options="{'no_create': True}"/>
                </xpath>
                </data>
            </field>
        </record>

        <!--Vista Form product_product-->
        <record id="product_product_inherit_view" model="ir.ui.view">
            <field name="name">product.product.inherit.view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[5]" position="after">
                    <page name="Datos adicionales" string="Datos adicionales">
                        <group col="2">
                            <group col="2">
                            <field name="delivery_pending"/>
                            <field name="monthly_sale"/>
                        </group>
                        <group>
                            <field name="existence_trans"/>
                            <field name="days_inv"/>
                            <field name="transit"/>
                        </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

