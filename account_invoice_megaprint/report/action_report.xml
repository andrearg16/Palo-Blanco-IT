<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Paperformat -->

    <record id="invoice_fel_format" model="report.paperformat">
        <field name="name">Invoice Fel</field>
        <field name="format">Letter</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">82</field>
        <field name="margin_bottom">30</field>
        <field name="margin_left">3</field>
        <field name="margin_right">3</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">75</field>
        <field name="dpi">90</field>
    </record>

    <!-- Report  -->

    <record id="invoice_fel_templates" model="ir.actions.report">
        <field name="name">Factura Electr√≥nica Cambiaria</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">account_invoice_megaprint.invoice_fel_template</field>
        <field name="report_file">account_invoice_megaprint.invoice_fel_template</field>
        <field name="print_report_name">'Factura Cambiaria - %s' % (object.name)</field>
        <field name="paperformat_id" ref="account_invoice_megaprint.invoice_fel_format"/>
        <field name="binding_model_id" eval="True"/>
    </record>

</odoo>