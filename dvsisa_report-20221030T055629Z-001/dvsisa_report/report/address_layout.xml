<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <template id="address_layout_custom_report" inherit_id="web.address_layout">
            <xpath expr="//div[@name='information_block']" position="replace">
                <t t-if="o._name == 'purchase.order' or o._name == 'stock.picking'">
                    <div name="information_block" class="col-6">
                        <t t-if="o._name == 'purchase.order'">
                            <t t-if="o.picking_type_id">
                                <p><strong>Dirección de Envío y Facturación:</strong></p>
                                <p style="margin-top:-17px; color:black;"><t t-esc="o.picking_type_id.company_id.name"/></p>
                                <p style="margin-top:-17px;"><t t-esc="o.picking_type_id.company_id.street"/></p>
                                <p style="margin-top:-17px;"><t t-esc="o.picking_type_id.company_id.street2"/></p>
                                <p style="margin-top:-17px;"><t t-esc="o.picking_type_id.company_id.city"/> <t t-esc="o.picking_type_id.company_id.state_id.name"/> <t t-esc="o.picking_type_id.company_id.zip"/></p>
                                <p style="margin-top:-17px;"><t t-esc="o.picking_type_id.company_id.country_id.name"/></p>
                                <p t-if="o.picking_type_id.company_id.phone" style="margin-top:-17px;"><i class="fa fa-phone icon-large"/> <t t-esc="o.picking_type_id.company_id.phone"/></p>
                                <p t-if="o.picking_type_id.company_id.vat" style="margin-top:-17px;">NIT: <t t-esc="o.picking_type_id.company_id.vat"/></p>
                            </t>
                        </t>
                        <t t-if="o._name == 'stock.picking'">
                            <t t-out="information_block"/>
                            <t t-if="o.picking_type_id">
                                <p t-if="o.picking_type_id.company_id.vat">NIT: <t t-esc="o.picking_type_id.company_id.vat"/></p>
                            </t>
                        </t> 
                    </div>
                </t>
                <t t-else="">
                    <div name="information_block" class="col-6">
                        <t t-out="information_block"/>
                    </div>
                </t>
            </xpath>
            <xpath expr="//div[@name='address']" position="replace">
                <div name="address" t-att-class="colclass">
                    <t t-if="o._name != 'purchase.order'">
                        <t t-if="o.partner_id">
                            <p><strong>Cliente:</strong></p>
                            <p style="margin-top:-17px; color:black;"><t t-esc="o.partner_id.name"/></p>
                            <p style="margin-top:-17px;"><t t-esc="o.partner_id.street"/></p>
                            <p style="margin-top:-17px;"><t t-esc="o.partner_id.street2"/></p>
                            <p style="margin-top:-17px;"><t t-esc="o.partner_id.city"/> <t t-esc="o.partner_id.state_id.name"/> <t t-esc="o.partner_id.zip"/></p>
                            <p style="margin-top:-17px;"><t t-esc="o.partner_id.country_id.name"/></p>
                            <p t-if="o.partner_id.phone" style="margin-top:-17px;"><i class="fa fa-phone icon-large"/> <t t-esc="o.partner_id.phone"/></p>
                            <p t-if="o.partner_id.vat" style="margin-top:-17px;">NIT: <t t-esc="o.partner_id.vat"/></p>
                            <t t-if="o.partner_id.child_ids">
                                <p><strong>Contacto:</strong></p>
                                <p style="margin-top:-17px; color:black;"><t t-esc="o.partner_id.child_ids[0].name"/></p>
                                <p t-if="o.partner_id.child_ids[0].phone" style="margin-top:-17px;"><i class="fa fa-phone icon-large"/> <t t-esc="o.partner_id.child_ids[0].phone"/></p>
                                <p t-if="o.partner_id.child_ids[0].vat" style="margin-top:-17px;">NIT: <t t-esc="o.partner_id.child_ids[0].vat"/></p>
                            </t>
                        </t>
                    </t>
                    <t t-else="">
                        <t t-esc="address"/>
                    </t>
                </div>
            </xpath>
        </template>

    </data>
    
</odoo>
