<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <template id="location_label_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.basic_layout" style="position:static;">
                          
                        <div class="page" style="font-size:16px;">
                            <div class="row">
                                <img class="img-fluid" t-if="doc.company_id.logo" t-att-src="image_data_uri(doc.company_id.logo)" style="height:80px; width:140px;" alt="Logo"/>
                            </div>
                            <div class="text-center">
                                <img style="height:55px; width:400px; margin-top:35px;" t-att-src="'/report/barcode/Code128/%s' % doc.name"/>
                            </div>
                            <div class="text-center">
                                <p style="font-size:23px; margin-top:10px;"><span t-esc="doc.name"/></p>
                            </div>
                        </div>
                        
                        <p style="page-break-after:always;"/>

                    </t>
                </t>
            </t>
        </template>

    </data>
    
</odoo>
