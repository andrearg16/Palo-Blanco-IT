<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <template id="report_delivery_document_custom_report" inherit_id="stock.report_delivery_document">

            <xpath expr="//div[hasclass('page')]/h2[1]" position="replace"> 
                <div style="margin-top:15px; padding-bottom:70px;">
                    <div class="float-left">
                        <h2>
                            <span t-field="o.name"/>
                        </h2>
                    </div>
                    <div class="float-right text-right">
                        <img style="height:60px; padding-left:240px;" t-att-src="'/report/barcode/Code128/%s' % o.name"/>
                    </div>
                </div>
            </xpath>

            <xpath expr="//div[hasclass('page')]/table[2]" position="replace"> 
                <table class="table table-bordered table-sm mt48" t-if="o.move_line_ids and o.state=='done'" name="stock_move_line_table">
                    <t t-set="has_serial_number" t-value="False"/>
                    <t t-set="has_serial_number" t-value="o.move_line_ids.mapped('lot_id')" groups="stock.group_lot_on_delivery_slip"/>
                    <thead>
                        <t t-if="o.picking_type_id.code == 'incoming'">
                            <tr style="background-color: #f29d41; color:white;">
                                <t t-set="colspan_final" t-value="4"/>
                                <th name="th_sml_product"><strong>Producto</strong></th>
                                <th name="th_description"><strong>Descripción</strong></th>
                                <t name="lot_serial" t-if="has_serial_number">
                                    <th>
                                        Lote/Número de Serie
                                    </th>
                                    <t t-set="colspan_final" t-value="colspan_final+1"/>
                                </t>
                                <th name="th_sml_qty_ordered" class="text-center" t-if="not has_serial_number">
                                    <strong>Ordenado</strong>
                                    <t t-set="colspan_final" t-value="colspan_final+1"/>
                                </th>
                                <th name="th_sml_quantity" class="text-center"><strong>Entregado</strong></th>
                                <th name="th_unity">
                                    <strong>U.</strong>
                                </th>
                                <th class="text-center" name="th_description">
                                    <strong>Costo</strong>
                                </th>
                                <th class="text-center" name="th_quantity">
                                    <strong>Total</strong>
                                </th>
                            </tr>
                        </t>
                        <t t-else="">
                            <tr style="background-color: #f29d41; color:white;">
                                <th name="th_sml_product"><strong>Producto</strong></th>
                                <t name="lot_serial" t-if="has_serial_number">
                                    <th>
                                        Lote/Número de Serie
                                    </th>
                                </t>
                                <th name="th_sml_qty_ordered" class="text-center" t-if="not has_serial_number">
                                    <strong>Ordenado</strong>
                                </th>
                                <th name="th_sml_quantity" class="text-center"><strong>Entregado</strong></th>
                            </tr>
                        </t>
                    </thead>
                    <tbody>
                        <t t-set="final_total" t-value="0"/>
                        <t t-if="o.has_packages" name="has_packages">
                            <t t-set="packages" t-value="o.move_line_ids.mapped('result_package_id')"/>
                            <t t-foreach="packages" t-as="package">
                                <t t-call="stock.stock_report_delivery_package_section_line"/>
                                <t t-set="package_move_lines" t-value="o.move_line_ids.filtered(lambda l: l.result_package_id == package)"/>
                                <!-- If printing lots/serial numbers => keep products in original lines -->
                                <t t-if="has_serial_number">
                                    <tr t-foreach="package_move_lines" t-as="move_line">
                                        <t t-call="stock.stock_report_delivery_has_serial_move_line"/>
                                    </tr>
                                </t>
                                <!-- If not printing lots/serial numbers => merge lines with same product+description+uom -->
                                    <t t-else="">
                                    <t t-if="o.picking_type_id.code != 'incoming'">
                                        <t t-set="aggregated_lines" t-value="package_move_lines._get_aggregated_product_quantities(strict=True)"/>
                                        <t t-call="stock.stock_report_delivery_aggregated_move_lines"/>
                                    </t>
                                    <t t-else="">
                                        <t t-foreach="o.move_line_ids_without_package" t-as="ml">

                                            <t t-if="o.origin">
                                                <t t-set="line_value" t-value="o.get_stock_valuation_origin_ids(o.origin)"/>
                                            </t>
                                            <t t-else="">
                                                <t t-set="line_value" t-value="o.get_stock_valuation_layer_ids(ml.id)"/>
                                            </t>

                                            <tr>
                                                <td>
                                                    <span t-field="ml.product_id.display_name"/><br/>
                                                </td>
                                                <td>
                                                    <span t-field="ml.description_picking"/>
                                                </td>
                                                <td class=" text-center h6" t-if="has_serial_number">
                                                    <div t-if="has_serial_number and (ml.lot_id or ml.lot_name)" t-esc="ml.lot_id.name or ml.lot_name" t-options="{'widget': 'barcode', 'humanreadable': 1, 'width': 400, 'height': 100, 'img_style': 'width:100%;height:35px;'}"/>
                                                </td>
                                                <td>
                                                    <span t-esc="'{0:,.2f}'.format(ml.product_uom_qty)" t-if="not has_serial_number"/>
                                                </td>
                                                <td>
                                                    <t t-if="not has_serial_number">
                                                        <t t-foreach="line_value" t-as="jojo">
                                                            <t t-if="ml.product_id == jojo.product_id">
                                                                <span t-esc="'{0:,.2f}'.format(jojo.quantity)"/>
                                                            </t>
                                                        </t>
                                                    </t>
                                                </td>
                                                <td>
                                                    <span t-field="ml.product_uom_id" groups="uom.group_uom"/>
                                                </td>
                    
                                                <td>
                                                    <span t-field="o.company_id.currency_id.symbol"/>.
                                                    <span t-esc="ml.product_id.standard_price"/>
                                                </td>
                    
                                                <t t-foreach="line_value" t-as="jojo">
                                                    <t t-if="ml.product_id == jojo.product_id">
                                                    
                                                        <!-- <td>
                                                            <span t-field="o.company_id.currency_id.symbol"/>.
                                                            <span t-esc="ml.product_id.standard_price"/>

                                                            <t t-if="o.origin">
                                                                <span t-esc="'{0:,.2f}'.format(jojo.price_unit)"/>
                                                            </t>
                                                            <t t-else="">
                                                                <span t-esc="ml.product_id.standard_price"/>
                                                            </t>

                                                        </td> -->

                                                        <td class="text-center">
                                                            <span t-field="o.company_id.currency_id.symbol"/>.

                                                            <t t-if="o.origin">
                                                                <span t-esc="'{0:,.2f}'.format(jojo.price_subtotal)"/>
                                                                <t t-set="final_total" t-value="final_total + jojo.price_subtotal"/>
                                                            </t>
                                                            <t t-else="">
                                                                <span t-esc="'{0:,.2f}'.format(jojo.value)"/>
                                                                <t t-set="final_total" t-value="final_total + jojo.value"/>
                                                            </t>

                                                        </td>
                                                    </t>
                                                </t>
                                            </tr>
                                            <tr>
                                                <t t-if="colspan_final == 3">
                                                    <td colspan="3">
                                                        <p style="font-size:14px;"><strong>Total en Letras:</strong></p>
                                                        <p style="padding-left:10px; margin-top:-12px;"><span t-esc="o.get_num2words(final_total, o.company_id.currency_id.name).upper()"/></p>
                                                    </td>
                                                </t>
                                                <t t-if="colspan_final == 4">
                                                    <td colspan="4">
                                                        <p style="font-size:14px;"><strong>Total en Letras:</strong></p>
                                                        <p style="padding-left:10px; margin-top:-12px;"><span t-esc="o.get_num2words(final_total, o.company_id.currency_id.name).upper()"/></p>
                                                    </td>
                                                </t>
                                                <t t-if="colspan_final == 5">
                                                    <td colspan="5">
                                                        <p style="font-size:14px;"><strong>Total en Letras:</strong></p>
                                                        <p style="padding-left:10px; margin-top:-12px;"><span t-esc="o.get_num2words(final_total, o.company_id.currency_id.name).upper()"/></p>
                                                    </td>
                                                </t>
                                                <th class="text-center" style="vertical-align: middle; background-color: #f29d41; color:white; font-size:18px;">
                                                    <p style="color:white;"><strong>Total</strong></p>
                                                </th>
                                                <td class="text-center" style="vertical-align: middle; font-size:18px;">
                                                    <p>
                                                        <strong>
                                                            <span t-field="o.company_id.currency_id.symbol"/>.
                                                            <span t-esc="'{0:,.2f}'.format(final_total)"/>
                                                        </strong>
                                                    </p>
                                                </td>
                                            </tr>
                                            
                                        </t>
                                    </t>
                                </t>
                            </t>
                            <!-- Make sure we do another section for package-less products if they exist -->
                            <t t-set="move_lines" t-value="o.move_line_ids.filtered(lambda l: not l.result_package_id)"/>
                            <t t-if="move_lines" name="no_package_move_lines">
                                <t t-call="stock.stock_report_delivery_no_package_section_line" name="no_package_section"/>
                                <t t-if="has_serial_number">
                                    <tr t-foreach="move_lines" t-as="move_line">
                                        <t t-call="stock.stock_report_delivery_has_serial_move_line"/>
                                    </tr>
                                </t>
                                <t t-else="">
                                    <t t-if="o.picking_type_id.code != 'incoming'">
                                        <t t-set="aggregated_lines" t-value="move_lines._get_aggregated_product_quantities()"/>
                                        <t t-if="aggregated_lines">
                                            <t t-call="stock.stock_report_delivery_aggregated_move_lines"/>
                                        </t>
                                    </t>
                                    <t t-else="">
                                        <t t-foreach="o.move_line_ids_without_package" t-as="ml">

                                            <t t-if="o.origin">
                                                <t t-set="line_value" t-value="o.get_stock_valuation_origin_ids(o.origin)"/>
                                            </t>
                                            <t t-else="">
                                                <t t-set="line_value" t-value="o.get_stock_valuation_layer_ids(ml.id)"/>
                                            </t>

                                            <tr>
                                                <td>
                                                    <span t-field="ml.product_id.display_name"/><br/>
                                                </td>
                                                <td>
                                                    <span t-field="ml.product_id.name"/>
                                                </td>
                                                <td class=" text-center h6" t-if="has_serial_number">
                                                    <div t-if="has_serial_number and (ml.lot_id or ml.lot_name)" t-esc="ml.lot_id.name or ml.lot_name" t-options="{'widget': 'barcode', 'humanreadable': 1, 'width': 400, 'height': 100, 'img_style': 'width:100%;height:35px;'}"/>
                                                </td>
                                                <td>
                                                    <span t-esc="'{0:,.2f}'.format(ml.product_uom_qty)" t-if="not has_serial_number"/>
                                                </td>
                                                <td>
                                                    <t t-if="not has_serial_number">
                                                        <t t-foreach="line_value" t-as="jojo">
                                                            <t t-if="ml.product_id == jojo.product_id">
                                                                <span t-esc="'{0:,.2f}'.format(jojo.quantity)"/>
                                                            </t>
                                                        </t>
                                                    </t>
                                                </td>
                                                <td>
                                                    <span t-field="ml.product_uom_id" groups="uom.group_uom"/>
                                                </td>
                    
                                                <td>
                                                    <span t-field="o.company_id.currency_id.symbol"/>.
                                                    <span t-esc="ml.product_id.standard_price"/>
                                                </td>
                    
                                                <t t-foreach="line_value" t-as="jojo">
                                                    <t t-if="ml.product_id == jojo.product_id">
                                                    
                                                        <!-- <td>
                                                            <span t-field="o.company_id.currency_id.symbol"/>.
                                                            <span t-esc="ml.product_id.standard_price"/>

                                                            <t t-if="o.origin">
                                                                <span t-esc="'{0:,.2f}'.format(jojo.price_unit)"/>
                                                            </t>
                                                            <t t-else="">
                                                                <span t-esc="ml.product_id.standard_price"/>
                                                            </t>

                                                        </td> -->

                                                        <td class="text-center">
                                                            <span t-field="o.company_id.currency_id.symbol"/>.

                                                            <t t-if="o.origin">
                                                                <span t-esc="'{0:,.2f}'.format(jojo.price_subtotal)"/>
                                                                <t t-set="final_total" t-value="final_total + jojo.price_subtotal"/>
                                                            </t>
                                                            <t t-else="">
                                                                <span t-esc="'{0:,.2f}'.format(jojo.value)"/>
                                                                <t t-set="final_total" t-value="final_total + jojo.value"/>
                                                            </t>

                                                        </td>
                                                    </t>
                                                </t>
                                            </tr>
                                            
                                            <tr>
                                                <t t-if="colspan_final == 4">
                                                    <td colspan="4">
                                                        <p style="font-size:14px;"><strong>Total en Letras:</strong></p>
                                                        <p style="padding-left:10px; margin-top:-12px;"><span t-esc="o.get_num2words(final_total, o.company_id.currency_id.name).upper()"/></p>
                                                    </td>
                                                </t>
                                                <t t-if="colspan_final == 5">
                                                    <td colspan="5">
                                                        <p style="font-size:14px;"><strong>Total en Letras:</strong></p>
                                                        <p style="padding-left:10px; margin-top:-12px;"><span t-esc="o.get_num2words(final_total, o.company_id.currency_id.name).upper()"/></p>
                                                    </td>
                                                </t>
                                                <t t-if="colspan_final == 6">
                                                    <td colspan="6">
                                                        <p style="font-size:14px;"><strong>Total en Letras:</strong></p>
                                                        <p style="padding-left:10px; margin-top:-12px;"><span t-esc="o.get_num2words(final_total, o.company_id.currency_id.name).upper()"/></p>
                                                    </td>
                                                </t>
                                                <th class="text-center" style="vertical-align: middle; background-color: #f29d41; color:white; font-size:18px;">
                                                    <p style="color:white;"><strong>Total</strong></p>
                                                </th>
                                                <td class="text-center" style="vertical-align: middle; font-size:18px;">
                                                    <p>
                                                        <strong>
                                                            <span t-field="o.company_id.currency_id.symbol"/>.
                                                            <span t-esc="'{0:,.2f}'.format(final_total)"/>
                                                        </strong>
                                                    </p>
                                                </td>
                                            </tr>

                                        </t>
                                    </t>
                                </t>
                            </t>
                        </t>
                        <!-- No destination packages -->
                        <t t-else="">
                            <!-- If printing lots/serial numbers => keep products in original lines -->
                            <t t-if="has_serial_number">
                                <tr t-foreach="o.move_line_ids" t-as="move_line">
                                    <t t-call="stock.stock_report_delivery_has_serial_move_line"/>
                                </tr>
                            </t>
                            <!-- If not printing lots/serial numbers => merge lines with same product -->
                            <t t-else="" name="aggregated_move_lines">
                                <t t-if="o.picking_type_id.code != 'incoming'">
                                    <t t-set="aggregated_lines" t-value="o.move_line_ids._get_aggregated_product_quantities()"/>
                                    <t t-call="stock.stock_report_delivery_aggregated_move_lines"/>
                                </t>
                                <t t-else="">
                                    <t t-foreach="o.move_line_ids_without_package" t-as="ml">

                                        <t t-if="o.origin">
                                            <t t-set="line_value" t-value="o.get_stock_valuation_origin_ids(o.origin)"/>
                                        </t>
                                        <t t-else="">
                                            <t t-set="line_value" t-value="o.get_stock_valuation_layer_ids(ml.id)"/>
                                        </t>

                                        <tr>
                                            <td>
                                                <span t-field="ml.product_id.display_name"/><br/>
                                            </td>
                                            <td>
                                                <span t-field="ml.product_id.name"/>
                                            </td>
                                            <td class=" text-center h6" t-if="has_serial_number">
                                                <div t-if="has_serial_number and (ml.lot_id or ml.lot_name)" t-esc="ml.lot_id.name or ml.lot_name" t-options="{'widget': 'barcode', 'humanreadable': 1, 'width': 400, 'height': 100, 'img_style': 'width:100%;height:35px;'}"/>
                                            </td>
                                            <td>
                                                <span t-esc="'{0:,.2f}'.format(ml.product_uom_qty + ml.qty_done)"/>
                                            </td>
                                            <td>
                                                <span t-esc="'{0:,.2f}'.format(ml.qty_done)"/>
                                            </td>
                                            <td>
                                                <span t-field="ml.product_uom_id" groups="uom.group_uom"/>
                                            </td>
                
                                            <td>
                                                <span t-field="o.company_id.currency_id.symbol"/>.
                                                <span t-esc="ml.product_id.standard_price"/>
                                            </td>
                
                                            <t t-foreach="line_value" t-as="jojo">
                                                <t t-if="ml.product_id == jojo.product_id">
                                                
                                                    <!-- <td>
                                                        <span t-field="o.company_id.currency_id.symbol"/>.
                                                        <span t-esc="ml.product_id.standard_price"/>

                                                        <t t-if="o.origin">
                                                            <span t-esc="'{0:,.2f}'.format(jojo.price_unit)"/>
                                                        </t>
                                                        <t t-else="">
                                                            <span t-esc="ml.product_id.standard_price"/>
                                                        </t>

                                                    </td> -->

                                                    <td class="text-center">
                                                        <span t-field="o.company_id.currency_id.symbol"/>.

                                                        <t t-if="o.origin">
                                                            <span t-esc="'{0:,.2f}'.format(jojo.price_subtotal)"/>
                                                            <t t-set="final_total" t-value="final_total + jojo.price_subtotal"/>
                                                        </t>
                                                        <t t-else="">
                                                            <span t-esc="'{0:,.2f}'.format(jojo.value)"/>
                                                            <t t-set="final_total" t-value="final_total + jojo.value"/>
                                                        </t>

                                                    </td>
                                                </t>
                                            </t>
                                        </tr>
                                        
                                        <tr>
                                            <t t-if="colspan_final == 3">
                                                <td colspan="3">
                                                    <p style="font-size:14px;"><strong>Total en Letras:</strong></p>
                                                    <p style="padding-left:10px; margin-top:-12px;"><span t-esc="o.get_num2words(final_total, o.company_id.currency_id.name).upper()"/></p>
                                                </td>
                                            </t>
                                            <t t-if="colspan_final == 4">
                                                <td colspan="4">
                                                    <p style="font-size:14px;"><strong>Total en Letras:</strong></p>
                                                    <p style="padding-left:10px; margin-top:-12px;"><span t-esc="o.get_num2words(final_total, o.company_id.currency_id.name).upper()"/></p>
                                                </td>
                                            </t>
                                            <t t-if="colspan_final == 5">
                                                <td colspan="5">
                                                    <p style="font-size:14px;"><strong>Total en Letras:</strong></p>
                                                    <p style="padding-left:10px; margin-top:-12px;"><span t-esc="o.get_num2words(final_total, o.company_id.currency_id.name).upper()"/></p>
                                                </td>
                                            </t>
                                            <th class="text-center" style="vertical-align: middle; background-color: #f29d41; color:white; font-size:18px;">
                                                <p style="color:white;"><strong>Total</strong></p>
                                            </th>
                                            <td class="text-center" style="vertical-align: middle; font-size:18px;">
                                                <p>
                                                    <strong>
                                                        <span t-field="o.company_id.currency_id.symbol"/>.
                                                        <span t-esc="'{0:,.2f}'.format(final_total)"/>
                                                    </strong>
                                                </p>
                                            </td>
                                        </tr>

                                    </t>
                                </t>
                            </t>
                        </t>
                    </tbody>
                </table>
            </xpath>

        </template>

    </data>
</odoo>